<form class="filter-form">
  <h1>Find a Lobster</h1>
  <div class="filters row row-thin">
    <div class="col-12 col-lg-4">
      <span class="category-fields field-group">
        <div class="field-title">
          Help with
          <span class="category-info-trigger contextual-help-trigger"></span>
        </div>
        <select class="category-select form-control">
          <% categories.each( function (category) { %>
            <option 
              value="<%= category.escape("id") %>">
              <%= category.escape('title') %>
          </option>
          <% }) %>
        </select>
      </span>
      <span class="postal-fields field-group">
        <div class="title">in</div>
        <input 
        class="form-control"
        id="postal-code" 
        name="postal_code" 
        pattern="[0-9]*" 
        placeholder="zip code" 
        type="text">
      </span>
      <span class="white-separator"></span>
    </div>
    <div class="col-12 col-lg-8">
      <div class="row row-thin">
        <div class="col-12 col-lg-7">
          <input 
          data-provide="datepicker" 
          class="datepicker" 
          data-date-format="mm/dd/yyyy">
          <span class="glyphicon glyphicon-calendar"></span>
        </div>
      </div>
      <span class="time-fields field-group">
        <div class="title">within</div>
        <select class="time-select form-control">
          <option class="time-option" value="anytime">anytime</option>
          <option class="time-option" value="morning">morning (6am - 12pm)</option>
          <option class="time-option" value="afternoon">afternoon (12pm - 6pm)</option>
          <option class="time-option" value="evening">evening (6pm - 12am)</option>
          <option class="time-option" value="night">night (12am - 6am)</option>
        </select>
      </span>
    </div>
    <div class="col-12 col-lg-5">
      <div class="row row-thin">
        <div class="col-12 col-md-4 col-lg-5">
          <span class="special-requirement-fields field-group">
            <div class="title">needs</div>
            <select class="special-select form-control">
              <option value="">---</option>
              <option value="sm-arms">Small arms</option>
              <option value="a-arms">Assault weapons</option>
              <option value="explosives">Explosives</option>
              <option value="car">Car</option>
              <option value="truck">Truck</option>
              <option value="other">Other</option>
            </select>
          </span>
          <span class="white-separator"></span>
        </div>
        <div class="col-12 col-md-8 col-lg-7">
          <button class="btn btn-tertiary btn-search" name="commit" type="submit">
            Find
          </button>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
</form>