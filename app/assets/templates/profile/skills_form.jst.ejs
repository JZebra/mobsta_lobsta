<h3>Set your hourly rates</h3>
<!--make this a popover at some point.. -->
<p>Clients will only be able to hire you have if you have an hourly rate and pitch for each category that you want to work.</p>
<div class="form-container row">
  <form class="form" id="skill-form">
    <div class="column-label skill-select-label col-lg-2">
      <select 
        form="skill-form"
        class="form-control"
        name="cat_id">
      <% categories.each( function (category) { %>
        <option 
          value="<%= category.escape("id") %>">
          <%= category.escape('title') %>
      </option>
      <% }) %>
    </select>
  </div>
  <div class="form-group column-label pitch-label col-lg-4">
    <textarea
      type="text" 
      class="form-control" 
      rows='2'
      name="pitch"
      placeholder="Why are you the one for the job? Please enter a short pitch."></textarea>
</div>
<div class="form-group column-label rate-label col-lg-2">
    <input 
      type="number" 
      class="form-control" 
      name="rate"
      placeholder="$">
    per hour
</div>
<input type="submit" class="btn btn-success" name="some_name" value="Submit">
</form>
</div>